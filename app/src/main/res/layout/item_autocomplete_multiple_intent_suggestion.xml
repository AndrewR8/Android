<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="6dp">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_pin"
        app:layout_constraintBottom_toBottomOf="@id/url"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="56dp"
        android:ellipsize="end"
        android:letterSpacing="0"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="?attr/autoCompleteTextColor"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/appIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hospital in Leeds" />

    <TextView
        android:id="@+id/url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="56dp"
        android:ellipsize="end"
        android:letterSpacing="0"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="?attr/autoCompleteSubtitleTextColor"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/appIcon"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="LS26 0ZD, Closes at 5PM" />

    <TextView
        android:id="@+id/firstAction"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:paddingEnd="16dp"
        android:ellipsize="end"
        android:letterSpacing="0"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="@color/cornflowerBlue"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/appIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/url"
        tools:text="Call Now" />

    <TextView
        android:id="@+id/secondAction"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="56dp"
        android:ellipsize="end"
        android:letterSpacing="0"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical|start"
        android:maxLines="1"
        android:textAlignment="textStart"
        android:textColor="@color/cornflowerBlue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/firstAction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/url"
        tools:text="Get Directions" />

</androidx.constraintlayout.widget.ConstraintLayout>