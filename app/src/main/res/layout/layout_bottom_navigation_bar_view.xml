<com.duckduckgo.app.browser.BottomNavigationBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:orientation="horizontal"
    android:elevation="8dp"
    android:background="@color/white"
    app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior">

    <ImageButton
        android:id="@+id/bottomBarBackItem"
        style="@style/BrowserIconMenuItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow_back_24dp"
        android:background="?selectableItemBackground"/>

    <ImageButton
        android:id="@+id/bottomBarForwardItem"
        style="@style/BrowserIconMenuItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow_forward_24dp"
        android:background="?selectableItemBackground"/>

    <ImageButton
        android:id="@+id/bottomBarFireItem"
        style="@style/BrowserIconMenuItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_fire_black_24dp"
        android:background="?selectableItemBackground"/>

    <ImageButton
        android:id="@+id/bottomBarBookmarksItem"
        style="@style/BrowserIconMenuItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_bookmarks_black_24dp"
        android:background="?selectableItemBackground"/>

</com.duckduckgo.app.browser.BottomNavigationBar>